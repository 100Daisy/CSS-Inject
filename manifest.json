{
    "name": "CSS Inject",
    "version": "1.0",
    "description": "Injects any hosted CSS file into a webpage",
    "homepage_url": "https://github.com/sym3tri/CSS-Inject",
   
    "browser_action": {
        "name": "Inject CSS",
        "default_icon": "icon-19.png"
    },

    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },

    "options_page": "options.html",

    "background_page": "background.html",

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["loadcss.js"] 
    }],

    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ]
}

